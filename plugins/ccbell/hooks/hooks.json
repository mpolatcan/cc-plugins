{
  "description": "ccbell sound notification hooks for Claude Code events",
  "hooks": {
    "Stop": [
      {
        "type": "command",
        "command": "${CLAUDE_PLUGIN_ROOT}/bin/ccbell stop",
        "timeout": 5
      }
    ],
    "Notification": [
      {
        "matcher": "permission_prompt",
        "type": "command",
        "command": "${CLAUDE_PLUGIN_ROOT}/bin/ccbell permission_prompt",
        "timeout": 5
      },
      {
        "matcher": "idle_prompt",
        "type": "command",
        "command": "${CLAUDE_PLUGIN_ROOT}/bin/ccbell idle_prompt",
        "timeout": 5
      }
    ],
    "SubagentStop": [
      {
        "type": "command",
        "command": "${CLAUDE_PLUGIN_ROOT}/bin/ccbell subagent",
        "timeout": 5
      }
    ]
  }
}
